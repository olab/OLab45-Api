{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.20.4.51522",
      "templateHash": "10926431483500842469"
    }
  },
  "parameters": {
    "environment_code": {
      "type": "string",
      "defaultValue": "dev",
      "metadata": {
        "description": "Environment short code"
      }
    },
    "resource_prefix": {
      "type": "string",
      "defaultValue": "olab",
      "metadata": {
        "description": "The prefix for Azure resources (e.g. kuvadev)."
      }
    },
    "sku": {
      "type": "string",
      "defaultValue": "B1",
      "metadata": {
        "description": "Describes plan's pricing tier and capacity. Check details at https://azure.microsoft.com/en-us/pricing/details/app-service/"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "canadacentral",
      "metadata": {
        "description": "The location to deploy the service resources"
      }
    }
  },
  "variables": {
    "serviceName": "api",
    "resourceNameFunctionApp": "[format('{0}{1}{2}', parameters('resource_prefix'), parameters('environment_code'), variables('serviceName'))]",
    "resourceNameFunctionAppFarm": "[variables('resourceNameFunctionApp')]",
    "resourceNameFunctionAppInsights": "[variables('resourceNameFunctionApp')]",
    "resourceNameFunctionAppStorage": "[format('{0}az', variables('resourceNameFunctionApp'))]",
    "resourceNameSignalr": "[format('{0}signalr', parameters('resource_prefix'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2021-02-01",
      "name": "[variables('resourceNameFunctionApp')]",
      "location": "[parameters('location')]",
      "kind": "functionapp",
      "identity": {
        "type": "SystemAssigned"
      },
      "tags": {
        "disposable": "yes"
      },
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('resourceNameFunctionAppFarm'))]",
        "enabled": true,
        "httpsOnly": true,
        "hostNamesDisabled": false,
        "siteConfig": {
          "alwaysOn": true,
          "healthCheckPath": "/api/health"
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('resourceNameFunctionAppFarm'))]"
      ]
    },
    {
      "type": "Microsoft.Web/sites/config",
      "apiVersion": "2021-02-01",
      "name": "[format('{0}/{1}', variables('resourceNameFunctionApp'), 'appsettings')]",
      "properties": {
        "APPLICATIONINSIGHTS_CONNECTION_STRING": "[reference(resourceId('Microsoft.Insights/components', variables('resourceNameFunctionAppInsights')), '2020-02-02').ConnectionString]",
        "AzureWebJobsStorage": "[format('DefaultEndpointsProtocol=https;AccountName={0};AccountKey={1};EndpointSuffix=core.windows.net', variables('resourceNameFunctionAppStorage'), listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('resourceNameFunctionAppStorage')), '2021-06-01').keys[0].value)]",
        "FUNCTIONS_EXTENSION_VERSION": "~4",
        "FUNCTIONS_WORKER_RUNTIME": "dotnet",
        "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING": "[format('DefaultEndpointsProtocol=https;AccountName={0};AccountKey={1};EndpointSuffix=core.windows.net', variables('resourceNameFunctionAppStorage'), listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('resourceNameFunctionAppStorage')), '2021-06-01').keys[0].value)]",
        "WEBSITE_CONTENTSHARE": "[format('{0}9552', variables('resourceNameFunctionApp'))]",
        "WEBSITE_RUN_FROM_PACKAGE": "1"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Insights/components', variables('resourceNameFunctionAppInsights'))]",
        "[resourceId('Microsoft.Web/sites', variables('resourceNameFunctionApp'))]",
        "[resourceId('Microsoft.Storage/storageAccounts', variables('resourceNameFunctionAppStorage'))]"
      ]
    },
    {
      "type": "Microsoft.Web/sites/config",
      "apiVersion": "2021-02-01",
      "name": "[format('{0}/{1}', variables('resourceNameFunctionApp'), 'web')]",
      "properties": {
        "cors": {
          "allowedOrigins": [
            "*"
          ],
          "supportCredentials": false
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', variables('resourceNameFunctionApp'))]"
      ]
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2021-02-01",
      "name": "[variables('resourceNameFunctionAppFarm')]",
      "location": "[parameters('location')]",
      "kind": "app",
      "sku": {
        "name": "[parameters('sku')]"
      },
      "tags": {
        "disposable": "yes"
      },
      "properties": {
        "perSiteScaling": false,
        "elasticScaleEnabled": false,
        "maximumElasticWorkerCount": 1,
        "isSpot": false,
        "reserved": false,
        "isXenon": false,
        "hyperV": false,
        "targetWorkerCount": 0,
        "targetWorkerSizeId": 0
      }
    },
    {
      "type": "Microsoft.Insights/components",
      "apiVersion": "2020-02-02",
      "name": "[variables('resourceNameFunctionAppInsights')]",
      "location": "[parameters('location')]",
      "kind": "web",
      "tags": {
        "disposable": "yes"
      },
      "properties": {
        "Application_Type": "web",
        "RetentionInDays": 90,
        "IngestionMode": "ApplicationInsights",
        "publicNetworkAccessForIngestion": "Enabled",
        "publicNetworkAccessForQuery": "Enabled"
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2021-06-01",
      "name": "[variables('resourceNameFunctionAppStorage')]",
      "location": "[parameters('location')]",
      "kind": "StorageV2",
      "sku": {
        "name": "Standard_LRS"
      },
      "tags": {
        "disposable": "yes"
      }
    },
    {
      "type": "Microsoft.SignalRService/signalR",
      "apiVersion": "2022-02-01",
      "name": "[variables('resourceNameSignalr')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Free_F1",
        "tier": "Free",
        "capacity": 1
      },
      "kind": "SignalR",
      "properties": {
        "tls": {
          "clientCertEnabled": false
        },
        "features": [
          {
            "flag": "ServiceMode",
            "value": "Serverless"
          },
          {
            "flag": "EnableConnectivityLogs",
            "value": "True"
          }
        ],
        "liveTraceConfiguration": {
          "enabled": "true",
          "categories": [
            {
              "name": "ConnectivityLogs",
              "enabled": "true"
            },
            {
              "name": "MessagingLogs",
              "enabled": "true"
            },
            {
              "name": "HttpRequestLogs",
              "enabled": "true"
            }
          ]
        },
        "cors": {
          "allowedOrigins": [
            "*"
          ]
        },
        "upstream": {
          "templates": []
        },
        "networkACLs": {
          "defaultAction": "Deny",
          "publicNetwork": {
            "allow": [
              "ServerConnection",
              "ClientConnection",
              "RESTAPI",
              "Trace"
            ]
          },
          "privateEndpoints": []
        },
        "publicNetworkAccess": "Enabled",
        "disableLocalAuth": false,
        "disableAadAuth": false
      }
    }
  ],
  "outputs": {
    "FunctionAppResourceName": {
      "type": "string",
      "value": "[variables('resourceNameFunctionApp')]"
    }
  }
}